<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginRegisterPanel.RegisterActivity">

        <RelativeLayout
            android:id="@+id/login_layout"
            android:padding="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="15dp"
                android:textSize="23sp"
                android:id="@+id/signuptext"
                android:text="Log in"
                android:textColor="@color/dark_gold"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="4dp"
                android:textSize="13sp"
                android:layout_below="@+id/signuptext"
                android:id="@+id/hellootext"
                android:text="Don't have an account?     "
                android:textColor="#A9A9A9"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/signup_txt_btn"
                android:layout_marginTop="4dp"
                android:textSize="15sp"
                android:textColor="@color/dark_gold"
                android:layout_below="@+id/signuptext"
                android:layout_toRightOf="@id/hellootext"
                android:text="Sign up"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="match_parent"
                android:layout_height="40dp" />


            <ImageView
                android:id="@+id/instakhatirLogo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/signup_txt_btn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_below="@+id/instakhatirLogo"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <android.support.design.widget.TextInputLayout
                    android:textColorHint="@color/dark_gold"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                    android:layout_height="wrap_content">

                    <EditText
                        android:textColor="@color/dark_gold"
                        android:textColorHint="@color/dark_gold"
                        android:textCursorDrawable="@color/dark_gold"
                        android:backgroundTint="@color/dark_gold"
                        android:id="@+id/mobile"
                        android:drawableLeft="@drawable/ic_phone"
                        android:layout_width="match_parent"
                        android:hint="Mobile"
                        android:textSize="13sp"
                        android:inputType="phone|textAutoComplete"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_height="wrap_content" />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:textColorHint="@color/dark_gold"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                    android:layout_height="wrap_content">


                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:textColorHint="@color/dark_gold"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                    android:layout_height="wrap_content">

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:textColorHint="@color/dark_gold"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                    android:layout_height="wrap_content">

                    <EditText
                        android:textColor="@color/dark_gold"
                        android:textColorHint="@color/dark_gold"
                        android:textCursorDrawable="@color/dark_gold"
                        android:backgroundTint="@color/dark_gold"
                        android:id="@+id/password"
                        android:drawableLeft="@drawable/ic_pass"
                        android:layout_width="match_parent"
                        android:hint="Password"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif-condensed"
                        android:inputType="textPassword"
                        android:layout_height="wrap_content" />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:textColorHint="@color/dark_gold"
                    android:layout_marginTop="8dp"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/loginbtn"
                    android:text="Login"
                    android:padding="8dp"
                    android:background="@drawable/oval_filled"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_width="180dp"
                    android:layout_height="40dp" />
            </LinearLayout>
        </RelativeLayout>
    <include layout="@layout/activity_register"
        android:id="@+id/register_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</android.support.design.widget.CoordinatorLayout>
